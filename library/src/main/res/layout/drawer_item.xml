<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/mdRoot"
    android:layout_width="match_parent"
    android:minHeight="@dimen/list_item_height_icon_text"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@id/mdImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/baseline_start"
        android:layout_marginRight="@dimen/baseline_end"
        android:layout_marginStart="@dimen/baseline_start"
        android:layout_marginEnd="@dimen/baseline_end"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:clickable="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/baseline_content"
        android:layout_marginRight="@dimen/baseline_end"
        android:layout_marginStart="@dimen/baseline_content"
        android:layout_marginEnd="@dimen/baseline_end"
        android:layout_centerVertical="true"
        android:clickable="false">

        <TextView
            android:id="@id/mdTextPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:singleLine="true"
            android:ellipsize="marquee"
            tools:text="Title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:clickable="false"/>

        <TextView
            android:id="@id/mdTextSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_text_secondary_margin"
            android:ellipsize="marquee"
            tools:text="Description \nSecond line"
            style="@style/TextAppearance.AppCompat.Body1"
            android:clickable="false"/>

    </LinearLayout>

</RelativeLayout>